rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¥ Fix 1: Allow admin access but only if 'role' exists
    match /{document=**} {
      allow read, write: if request.auth != null && 
                         request.auth.token.role != null && 
                         request.auth.token.role == 'admin';
    }

    // ðŸ”¥ Fix 2: Allow users to read/write only their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ”¥ Fix 3: Allow users to read/write only their own tasks
    match /tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // ðŸ”¥ Fix 4: Allow users to access only their own completed tasks
    match /completedTasks/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // ðŸ”¥ Fix 5: Allow users to write task actions (previously missing)
    match /taskActions/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
